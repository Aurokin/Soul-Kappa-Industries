                  | Project Name
        .col-lg-4.col-sm-6
          a.portfolio-box(href='#')
            img.img-responsive(src='/images/portfolio/3.png', alt='')
            .portfolio-box-caption
              .portfolio-box-caption-content
                .project-category.text-faded
                  | Category
                .project-name
                  | Project Name
        .col-lg-4.col-sm-6
          a.portfolio-box(href='#')
            img.img-responsive(src='/images/portfolio/4.png', alt='')
            .portfolio-box-caption
              .portfolio-box-caption-content
                .project-category.text-faded
                  | Category
                .project-name
                  | Project Name
        .col-lg-4.col-sm-6
          a.portfolio-box(href='#')
            img.img-responsive(src='/images/portfolio/5.jpg', alt='')
            .portfolio-box-caption
              .portfolio-box-caption-content
                .project-category.text-faded
                  | Category
